{
  "coc.preferences.formatOnSaveFiletypes": [
    "Markdown",
    "coc-cfn-lint",
    "css",
    "html",
    "javascript",
    "javascriptreact",
    "json",
    "markdown",
    "markdownlint",
    "python",
    "ruby",
    "sql",
    "terraform",
    "typescript",
    "typescript.tsx",
    "typescriptreact",
    "yaml"
  ],
  "diagnostic.refreshAfterSave": true,
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": [
        "c",
        "cc",
        "cpp",
        "objc",
        "objcpp"
      ],
      "rootPatterns": [
        ".ccls",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      }
    },
    "digestif": {
      "command": "digestif",
      "filetypes": [
        "tex",
        "plaintex",
        "context"
      ]
    },
    "lua": {
      "command": "lua-lsp",
      "filetypes": [
        "lua"
      ]
    }
  },
  "markdownlint.onChange": false,
  "markdownlint.onOpen": false,
  "markdownlint.onSave": true
}
